<h1>
    <%= title %>
</h1>
<%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>

            <form action="/inv/update/" method="post" class="inventory-form" id="updateForm">
                <label for="classificationList">Classification:</label>
                <%- classificationSelect %>

                    <label for="inv_make">Make:</label>
                    <input type="text" name="inv_make" id="inv_make" value="<%= locals.inv_make %>">
                    <label for="inv_model">Model:</label>
                    <input type="text" name="inv_model" id="inv_model" value="<%= locals.inv_model %>">
                    <label for="inv_year">Year:</label>
                    <input type="text" name="inv_year" id="inv_year" pattern="[0-9]{4}" maxlength="4"
                        value="<%= locals.inv_year %>" placeholder="2024">
                    <label for="inv_description">Description:</label>
                    <textarea name="inv_description" id="inv_description"><%= locals.inv_description %></textarea>
                    <label for="inv_image">Image Path:</label>
                    <input type="text" name="inv_image" id="inv_image" value="<%= locals.inv_image %>"
                        placeholder="/images/vehicles/no-image.png">
                    <label for="inv_thumbnail">Thumbnail Path:</label>
                    <input type="text" name="inv_thumbnail" id="inv_thumbnail"
                        value="<%= locals.inv_thumbnail %>" placeholder="/images/vehicles/no-image-tn.png">
                    <label for="inv_price">Price:</label>
                    <input type="number" name="inv_price" id="inv_price" min="0"
                        value="<%= locals.inv_price %>" placeholder="25000">
                    <label for="inv_miles">Miles:</label>
                    <input type="number" name="inv_miles" id="inv_miles" min="0"
                        value="<%= locals.inv_miles %>" placeholder="50000">
                    <label for="inv_color">Color:</label>
                    <input type="text" name="inv_color" id="inv_color" value="<%= locals.inv_color %>">

                    <button type="submit" disabled>Update Vehicle</button>
                    
                    <input type="hidden" name="inv_id"
                    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
                    <% } %>>
            </form>

<script src="/js/inv-update.js"></script>
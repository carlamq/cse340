<!-- Content Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<!-- Message Display Section -->
<%# messages() %>
<!-- Vehicle Detail Display -->
<%- grid %>

<!-- Buy Now Section (only for logged in clients) -->
<% if (locals.loggedin && locals.accountData.account_type== "Client") { %>
    <div class="purchase-section">
        <a href="/account/purchase/<%= locals.vehicle_id %>" class="buy-now-btn">Buy This Car Now!</a>
        <p class="purchase-note">Complete your purchase and we'll contact you with delivery details.</p>
    </div>
<% } else if (!locals.loggedin) { %>
    <div class="purchase-section">
        <p class="login-required">
            <a href="/account/login">Login</a> to purchase this vehicle
        </p>
    </div>
<% } %>